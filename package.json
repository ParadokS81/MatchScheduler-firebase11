{
  "name": "matchscheduler",
  "version": "3.0.0",
  "description": "Gaming community match scheduling platform",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run firebase\" \"npm run css:watch\"",
    "dev": "npm run start",
    "dev:local": "concurrently \"npm run serve\" \"npm run css:watch\"",
    "serve": "npx http-server ./public -p 3000 -c-1",
    "firebase": "firebase emulators:start --only auth,firestore,functions,hosting,storage,eventarc",
    "css:watch": "tailwindcss -i ./src/css/input.css -o ./public/css/main.css --watch",
    "css:build": "tailwindcss -i ./src/css/input.css -o ./public/css/main.css --minify",
    "build": "npm run version && npm run css:build && npm run build:js",
    "build:js": "echo 'JS build step - to be implemented'",
    "version": "node scripts/generate-version.js",
    "deploy": "npm run version && npm run css:build && firebase deploy",
    "deploy:hosting": "npm run version && npm run css:build && firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "test": "npm run test:functions",
    "test:functions": "cd functions && npm test",
    "logs": "firebase functions:log",
    "seed": "node scripts/seed.js",
    "seed:quick": "node scripts/seed.js --quick",
    "seed:prod": "node scripts/seed.js --production",
    "seed:prod:quick": "node scripts/seed.js --production --quick",
    "seed:prod:leaders": "node scripts/seed.js --production --leaders-only"
  },
  "keywords": [
    "gaming",
    "tournament",
    "scheduling",
    "firebase",
    "matchmaking"
  ],
  "author": "MatchScheduler Team",
  "license": "MIT",
  "dependencies": {
    "firebase": "^11.0.0",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "better-sqlite3": "^12.6.2",
    "concurrently": "^9.2.0",
    "firebase-admin": "^13.6.0",
    "postcss": "^8.4.0",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
